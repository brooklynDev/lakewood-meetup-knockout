<tr id="details-<%=@result[:asin] %>">
	<td colspan="7">
		<table class="table table-bordered">
			<tr>
				<th style="text-align:center;vertical-align:middle;">Rating</th>
				<th style="text-align:center;vertical-align:middle;">Reviews</th>
				<th style="text-align:center;vertical-align:middle;">Sold By</th>
				<th style="text-align:center;vertical-align:middle;">Price</th>
				<th style="width:25%;text-align:center;vertical-align:middle;">Description</th>
			</tr>
			<tr>
				<td style="text-align:center;vertical-align:middle;"><%=@result[:rating] %></td>
				<td style="text-align:center;vertical-align:middle;"><%=@result[:reviews] %></td>
				<td style="text-align:center;vertical-align:middle;"><%=@result[:sold_by] %></td>
				<td style="text-align:center;vertical-align:middle;"><%=@result[:price]%></td>
				<td style="text-align:center;vertical-align:middle;">
					<div style="height:200px;overflow:scroll;">
						<%=@result[:description].gsub('\n', "<br>") %>
					</div>
				</td>
			</tr>
		</table>
	</td>
</tr>